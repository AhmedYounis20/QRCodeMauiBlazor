<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI"
             x:Class="QRCodeMauiBlazor.Pages.NewPage1"
             Title="NewPage1">
    <VerticalStackLayout>
        <Label 
            x:Name="BarcodeResult"
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <VerticalStackLayout>
        <zxing:CameraBarcodeReaderView x:Name="barcodeReader"
                                           HeightRequest="300"
                                           WidthRequest="300"
                                           IsDetecting="True" 
                                           IsTorchOn="False" 
                                           CameraLocation="Rear"
                                           
                                           BarcodesDetected="CameraBarcodeReaderView_BarcodesDetected"/>
        </VerticalStackLayout>
            <Button Text="BackToMain" Clicked="BackToMain"  />

    </VerticalStackLayout>
</ContentPage>